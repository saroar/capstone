<%= form_for @patient do |f| %>

    <div class='form-group'>
        <%= f.label :name %></br>
        <%= f.text_field :name %>
    </div>
    <div class='form-group'>
        <%= f.label :age %></br>
        <%= f.text_field :age %>
    </div>
    <div class='form-group'>
        <%= f.label :address %></br>
        <%= f.text_area :address %>
    </div>

    <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
    </div>
<% end %>