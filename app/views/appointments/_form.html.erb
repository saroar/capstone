<%= form_for [@team, @appointment] do |f| %>

    <div class='form-group'>
        <%= f.label :title %></br>
        <%= f.text_field :title %>
    </div>
     <div class='form-group'>
        <%= f.label :doctor %></br>
        <%= f.text_field :doctor %>
    </div>
    <% if false %>
    <div class='form-group' class="input-group date" data-provide="datepicker" data-date-format="dd/mm/yyyy">
        <%= f.label :date %> </br>
        <%= f.text_field :date, 'data-behaviour' => 'datepicker' %>
    </div>
     <div class='form-group' class="timepicker">
        <%= f.label :time %> </br>
        <%= f.text_field :time, 'data-behaviour' => 'timepicker' %>
    </div>
    <% end %>
    <div class='form-group'>
        <%= f.datetime_select :datetime, ampm: :true %>
    </div>

    <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
    </div>
<% end %>