<%= form_for [@team, @appointment] do |f| %>

    <div class='form-group'>
        <%= f.label :title %></br>
        <%= f.text_field :title %>
    </div>
     <div class='form-group'>
        <%= f.label :doctor %></br>
        <%= f.text_field :doctor %>
    </div>
    <div class='form-group' class="input-group date" data-provide="datepicker">
        <%= f.label :date %> </br>
        <%= f.text_field :date, 'data-behaviour' => 'datepicker' %>
    </div>

    <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
    </div>
<% end %>